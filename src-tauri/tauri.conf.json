{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "BetterRTX Installer",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": "^minecraft(-preview)?:",
        "scope": [
          {
            "name": "run-shell",
            "cmd": "powershell",
            "args": true
          },
          {
            "name": "run-script",
            "cmd": "powershell",
            "args": [
              "-ExecutionPolicy",
              "Bypass",
              "-File",
              {
                "validator": ".+"
              }
            ]
          },
          {
            "name": "uwpinject",
            "cmd": "uwpinject",
            "args": true
          },
          {
            "name": "UWPInjector",
            "cmd": "UWPInjector",
            "args": [
              "-p",
              {
                "validator": "[0-9]+"
              },
              "-d",
              {
                "validator": ".+"
              }
            ]
          }
        ]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://bedrock.graphics/*"]
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$RESOURCE/**/*", "$APPDATA/**/*", "$APPLOCALDATA/**/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "externalBin": [
        "../resources/bin/BetterRenderDragon/uwpinject",
        "../resources/bin/UWPDumper/x64/UWPInjector"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "graphics.bedrock",
      "longDescription": "",
      "resources": ["../resources/script/minecraft_*.ps1"],
      "shortDescription": "",
      "targets": "msi",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "BetterRTX Installer",
        "width": 800
      }
    ]
  }
}
